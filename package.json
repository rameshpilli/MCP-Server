{
  "name": "mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) Server with tool orchestration and agent registration",
  "main": "index.js",
  "bin": {
    "mcp": "./bin/mcp.js",
    "mcp-server": "./bin/mcp-server.js",
    "mcp-tools": "./bin/mcp-tools.js"
  },
  "scripts": {
    "start": "uvicorn app.streamlined_mcp_server:app --host 0.0.0.0 --port 8080",
    "start:dev": "uvicorn app.streamlined_mcp_server:app --host 0.0.0.0 --port 8080 --reload",
    "start:ui": "chainlit run ui/app.py --host 0.0.0.0 --port 8081",
    "start:all": "concurrently \"npm run start:dev\" \"npm run start:ui\"",
    "start:mock": "python examples/dummy_financial_server.py",
    "test": "pytest tests/",
    "lint": "flake8 app/ tests/",
    "format": "black app/ tests/",
    "build": "python -m build",
    "install:dev": "pip install -e .",
    "postinstall": "node scripts/post-install.js",
    "docs": "mkdocs serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rameshpilli/MCP-Server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "tools",
    "agents",
    "fastapi"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "concurrently": "^7.6.0",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "table": "^6.8.1",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "bin/",
    "scripts/",
    "app/",
    "ui/",
    "examples/",
    "docs/",
    "LICENSE",
    "README.md"
  ],
  "python": {
    "dependencies": [
      "fastapi>=0.104.0",
      "uvicorn>=0.24.0",
      "fastmcp>=0.1.0",
      "chainlit>=0.7.0",
      "pydantic>=2.4.2",
      "httpx>=0.25.0",
      "sse-starlette>=1.6.1",
      "python-multipart>=0.0.6",
      "redis>=4.5.0",
      "pandas>=2.0.0",
      "openai>=1.0.0",
      "cohere>=4.32",
      "langchain>=0.3.25",
      "anthropic>=0.5,<1.0.0",
      "boto3>=1.28.62",
      "markdown>=3.5",
      "beautifulsoup4>=4.12.2",
      "python-dotenv>=1.0.0",
      "gunicorn>=21.2.0",
      "click>=8.0.0",
      "pytest>=7.4.0"
    ],
    "requires": ">=3.9"
  }
}
